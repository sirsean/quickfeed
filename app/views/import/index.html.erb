<div class="offset2 span6">
  <h2>Import OPML File</h2>
  <p>This will help move your data over from Google Reader, if that was your thing.</p>
  <%= bootstrap_form_for(@import_form, :url => "/import/upload", :method => :post, :html => { :id => "import", :class => "well form-horizontal" }) do |f| %>
    <%= f.file_field :opml, :label => "OPML File" %>
    <%= f.control_group do %>
      <%= f.primary "Import" %>
    <% end %>
  <% end %>
</div>
