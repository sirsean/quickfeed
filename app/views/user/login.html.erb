<div class="span6 offset2">
  <h2>Login</h2>
<%= bootstrap_form_for(@user, :url => "/user/login", :method => :post, :html => { :class => "form-horizontal well" }) do |f| %>
  <%= f.text_field :username, :tabindex => 1 %>
  <%= f.password_field :password, :tabindex => 2 %>
  <%= f.control_group do %>
    <%= f.primary "Login" %>
  <% end %>
<% end %>
</div>
